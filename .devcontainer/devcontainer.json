{
  // Sui dev container (no Prebuild). Installs via suiup.
  "name": "Sui Starter (No Prebuild)",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Mysten.move"
      ]
    }
  },
  // 初回作成時: suiup + Sui CLI(testnet) を導入
  "onCreateCommand": "bash .devcontainer/setup.sh",
  // 起動毎: testnet を最新化（失敗は許容）
  "postStartCommand": "bash .devcontainer/update-on-start.sh",
  // ~/.local/bin を先頭に追加して優先解決
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:${containerEnv:HOME}/.local/bin"
  },
  // フロントエンド開発の目印ポート
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": { "label": "Web (Next.js)" }
  }
}
